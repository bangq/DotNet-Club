
@{
    ViewBag.Title = "Edit";
}
@model User
<div class="page-content">

    <div class="page-header">
       
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <!-- #section:pages/error -->
            
            <div style="clear:both;"></div>
            <!-- /section:pages/error -->

            <div class="ch_divone">
                <b>用户信息</b>
                <form class="form-horizontal" role="form" action="/admin/user/save" method="post">
                    <input type="hidden" name="id" value="@Model.Id"/>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 用户名 </label>
                        <div class="col-sm-9">
                            <input type="text" id="form-field-1" placeholder="用户名" name="name" id="name" class="col-xs-10 col-sm-4" value="@Model.Name"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-3"> 账号 </label>
                        <div class="col-sm-9">
                            <input type="text" id="form-field-3" placeholder="账号" id="account" name="account" class="col-xs-10 col-sm-4" value="@Model.Account"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-4"> 用户级别 </label>
                        <div class="col-sm-9">
                            @*<input type="text" id="form-field-4" placeholder="用户级别" class="col-xs-10 col-sm-4" value="@Model.Level.Name" />*@
                            @Html.DropDownList("levelId", new SelectList(ViewBag.SeletItems, "Value", "Text"), new {@class = " col-sm-4"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-5"> 积分 </label>
                        <div class="col-sm-how">
                            <input type="text" id="form-field-5" placeholder="积分" id="integral" name="integral" class="col-xs-10 col-sm-how" value="@Model.integral"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-6"> 头像 </label>
                        <div class="col-sm-3">
                            <input type="text" id="form-field-6" placeholder="头像" id="Image" name="Image" class="col-xs-10 col-sm-how" @Model.Image/>
                        </div>
                    </div>

                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Submit
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn" type="reset">
                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <!---/ch_divone--->
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.page-content --> 

